{
  "manifest_version": 3,
  "name": "Language Neutrality (BOLD)",
  "version": "2.0.0",
  "description": "Right-click selected text to analyze bias and suggest a neutral rewrite.",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Language Neutrality"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/warn.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

